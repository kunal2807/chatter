<h4 class="ui center aligned medium icon header">
  <i class="circular rocketchat orange inverted icon"></i>
  Say Something
</h4>
<div class="ui two column grid">
  <!---feed div--->
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="message-box">
        <div class="ui large feed" id='message-container'>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form"}, role: "form", url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body%>
              <%= f.button '<i class="icon edit border inverted orange"></i>'.html_safe%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!---MENU DIV--->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a href="#" class="item">item</a>
          <a href="#" class="item">item</a>
          <a href="#" class="item">item</a>
        </div>
      </div>
    </div>
  </div>
</div>
